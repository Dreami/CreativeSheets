<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp">

    <TextView
        android:id="@+id/maxhp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max HP"
        android:textSize="22dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/editMaxHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@+id/maxhp"
        android:inputType="number"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/maxMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max MP"
        android:textSize="22dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/maxhp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editMaxMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignBaseline="@+id/maxMp"
        android:layout_toRightOf="@+id/maxMp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/currentHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current HP"
        android:textSize="22dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/maxMp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editCurrentHp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignBaseline="@+id/currentHp"
        android:layout_toRightOf="@+id/currentHp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/currentMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current MP"
        android:textSize="22dp"
        android:layout_marginBottom="26dp"
        android:layout_marginRight="22dp"
        android:layout_below="@+id/currentHp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editCurrentMp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_alignBaseline="@+id/currentMp"
        android:layout_toRightOf="@+id/currentMp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#1ae038"
        android:text="Done" />

    <TextView
        android:id="@+id/addAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/done"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:textSize="26dp"
        android:text="+ Add attribute" />

</RelativeLayout>